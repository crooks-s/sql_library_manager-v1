extends layout

block content
  a.button(href="new_book.html") Create New Book
  br
  br
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each book in books
        tr
          td
            a(href=`book_detail/${book.id}`) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.year}